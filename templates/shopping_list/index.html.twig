{% extends 'base.html.twig' %}

{% block title %}Your Shopping List!{% endblock %}

{% block body %}
    <h1>Meine Einkaufslisten</h1>
    
    <a href="{{ path('app_shopping_list_new') }}">Neue Liste</a>

    {% for list in lists %}
        <div class="list">
            <h2>{{ list.name }}</h2>
            <ul>
                {% for item in list.items %}
                    <li>{{ item.amount }} {{ item.name }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
{% endblock %}

