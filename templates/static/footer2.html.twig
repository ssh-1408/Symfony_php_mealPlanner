    <div id="area">
      <div id="sides">
        <div id="pan"></div>
        <div id="handle"></div>
      </div>
      <div id="pancake">
        <div id="pastry"></div>
      </div>
    </div>
  </div>

  <div class="footer-content">
    <!-- Social Media Icons -->
    <div class="socials">
      <a href="https://www.facebook.com" class="fa-brands fa-facebook"></a>
      <a href="https://www.twitter.com" class="fa-brands fa-twitter"></a>
      <a href="https://www.linkedin.com" class="fa-brands fa-linkedin"></a>
      <a href="https://www.instagram.com" class="fa-brands fa-instagram"></a>
    </div>

    <div class="links">
      <a href="#home">Home</a>
      <a href="#about">About</a>
      <a href="#services">Services</a>
      <a href="#team">Team</a>
      <a href="#contact">Contact</a>
    </div>

