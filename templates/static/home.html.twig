{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
  <style>
    /*---------------------------------------------------
    LESS Elements 0.9
  ---------------------------------------------------
    A set of useful LESS mixins
    More info at: http://lesselements.com
  ---------------------------------------------------*/
@charset "UTF-8";
html,
body {
  text-align: center;
  line-height: 1.25em;
  color: #333;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  
}
#animation {
  padding-top: 20px;
  width: 205px;
  height: 303px;
  position: relative;
}
#animation img {
  position: absolute;
  top: 20px;
  left: 0;
}
#animation #head {
  left: 15px;
}
#animation #bob {
  top: 92px;
}
#animation #arm {
  top: 122px;
  left: 63px;
  -webkit-transform-origin: 0 41px;
  transform-origin: 0 41px;
}
#animation #cooker {
  top: 146px;
  left: 112px;
}
#animation #pancake {
  top: 152px;
  left: 135px;
  image-rendering: pixelated;
}
#pancake {
  border-radius: 0 !important;
  background-color: transparent !important;
  width: 17px !important;
  height: 9px !important;
}

#animation #fire {
  top: 167px;
  left: 136px;
}
#animation:hover #arm {
  -webkit-animation: flick 1s infinite;
  animation: flick 1s infinite;
}
#animation:hover #pancake {
  -webkit-animation: spin 3s infinite;
  animation: spin 3s infinite;
}
#animation:hover #head {
  -webkit-animation: headBob 0.3s infinite;
  animation: headBob 0.3s infinite;
}
/* The animation for the arm */
@-webkit-keyframes flick {
  0% {
    -webkit-transform: rotate(0);
    transform: rotate(0);
  }
  10% {
    -webkit-transform: rotate(-15deg);
    transform: rotate(-15deg);
  }
  20%,
  100% {
    -webkit-transform: rotate(0);
    transform: rotate(0);
  }
}
@keyframes flick {
  0% {
    transform: rotate(0);
  }
  10% {
    transform: rotate(-15deg);
  }
  20%,
  100% {
    transform: rotate(0);
  }
}
/* The animation for the pancake */
@-webkit-keyframes spin {
  0% {
    -webkit-transform: translate(0, 0) rotate(0);
    transform: translate(0, 0) rotate(0);
  }
  10% {
    -webkit-transform: translate(0, -25px) rotate(0);
    transform: translate(0, -25px) rotate(0);
  }
  20% {
    -webkit-transform: translate(0, -65px) rotate(-360deg);
    transform: translate(0, -65px) rotate(-360deg);
  }
  50%,
  100% {
    -webkit-transform: translate(0, 0) rotate(-720deg);
    transform: translate(0, 0) rotate(-720deg);
  }
}
@keyframes spin {
  0% {
    transform: translate(0, 0) rotate(0);
  }
  10% {
    transform: translate(0, -25px) rotate(0);
  }
  20% {
    transform: translate(0, -65px) rotate(-360deg);
  }
  50%,
  100% {
    transform: translate(0, 0) rotate(-720deg);
  }
}
/* The animation for the head bob */
@-webkit-keyframes headBob {
  0%,
  50%,
  100% {
    -webkit-transform: translate(0, 0) rotate(0);
    transform: translate(0, 0) rotate(0);
  }
  25% {
    -webkit-transform: translate(-5px, -5px) rotate(-10deg);
    transform: translate(-5px, -5px) rotate(-10deg);
  }
  75% {
    -webkit-transform: translate(5px, -5px) rotate(10deg);
    transform: translate(5px, -5px) rotate(10deg);
  }
}
@keyframes headBob {
  0%,
  50%,
  100% {
    transform: translate(0, 0) rotate(0);
  }
  25% {
    transform: translate(-5px, -5px) rotate(-10deg);
  }
  75% {
    transform: translate(5px, -5px) rotate(10deg);
  }
}

</style>
</head>
<body>
  
