{% extends 'base.html.twig' %}

{% block title %}{{ recipe.title }} | Recipe{% endblock %}

{% block body %}
<section class="py-5 bg-light">
    <div class="container" style="max-width: 800px;">
        <div class="card shadow-sm border-0">
            {% if recipe.image %}
                <img src="{{ asset('images/recipeUploads/' ~ recipe.image) }}" 
                     class="card-img-top" 
                     style="object-fit: cover; max-height: 300px;" 
                     alt="{{ recipe.title }}">
            {% endif %}
            <div class="card-body">
                <h2 class="card-title text-custom">{{ recipe.title }}</h2>
                <p class="text-muted">{{ recipe.description }}</p>

                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item"><strong>Ingredients:</strong> {{ recipe.ingredients }}</li>
                    <li class="list-group-item"><strong>Preparation Time:</strong> {{ recipe.preparationTime }} mins</li>
                    <li class="list-group-item"><strong>Calories:</strong> {{ recipe.calories }}</li>
                    <li class="list-group-item"><strong>Nutrients:</strong> {{ recipe.nutrients }}</li>
                    <li class="list-group-item"><strong>Allergens:</strong> {{ recipe.allergens }}</li>
                    {% if recipe.externalLink %}
                        <li class="list-group-item">
                            <strong>External Link:</strong> 
                            <a href="{{ recipe.externalLink }}" target="_blank">{{ recipe.externalLink }}</a>
                        </li>
                    {% endif %}
                </ul>

                <div class="mb-3">
                    <span class="badge bg-warning text-dark fs-6">⭐ {{ recipe.averageRating ?? 'N/A' }}</span>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_meal_plan_index') }}" class="btn custom-button">← Back to Meal Plan</a>
                    <a href="{{ path('app_meal_plan_edit', {'id': mealPlan.id}) }}" class="btn custom-button">✎ Edit Plan</a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
