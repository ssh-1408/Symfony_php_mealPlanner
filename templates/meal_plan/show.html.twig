{% extends 'base.html.twig' %}

{% block title %}MealPlan{% endblock %}

{% block body %}
<div class="container bg-white p-4 rounded shadow mt-5">
    <h1 class="mb-4 text-center">Meal Plan</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ meal_plan.id }}</td>
            </tr>
            <tr>
                <th>Meal Date</th>
                <td>{{ meal_plan.mealDate ? meal_plan.mealDate|date('Y-m-d H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Mealtime</th>
                <td>{{ meal_plan.mealtime.value|capitalize }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_meal_plan_index') }}" class="btn btn-sm mealplan-btn-back">← Back to List</a>
        <a href="{{ path('app_meal_plan_edit', {'id': meal_plan.id}) }}" class="btn btn-sm mealplan-btn-edit">✎ Edit</a>
    </div>

    <div class="mt-3">
        {{ include('meal_plan/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
