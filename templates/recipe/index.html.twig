{% extends 'base.html.twig' %}

{% block title %}Recipe Index{% endblock %}

{% block body %}
<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">Recipes</h2>
            <a href="{{ path('app_recipe_new') }}" class="btn custom-button">Create New</a>
        </div>
        <div class="mb-4 text-center">
            <div class="btn-group" role="group">
                <a href="{{ path('app_recipe_index') }}" class="btn btn-outline-secondary">All</a>
                <a href="{{ path('app_recipe_index', {'filter': 'vegan'}) }}" class="btn btn-outline-success">Vegan</a>
                <a href="{{ path('app_recipe_index', {'filter': 'vegetarian'}) }}" class="btn btn-outline-success">Vegetarian</a>
                <a href="{{ path('app_recipe_index', {'filter': 'low_calories'}) }}" class="btn btn-outline-secondary">Under 200 Calories</a>
                <a href="{{ path('app_recipe_index', {'filter': 'quick'}) }}" class="btn btn-outline-secondary">Quick Recipes</a>
            </div>
        </div>

        {% if recipes is not empty %}
            <div class="row g-4">
                {% for recipe in recipes %}
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm border-0">
                            
                            <img src="{{ asset('images/recipeUploads/' ~ recipe.image) }}" class="card-img-top p-2" alt="{{ recipe.title }}">
                          
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-center">{{ recipe.title }}</h5>
                                <span class="badge text-dark">‚≠ê {{ recipe.averageRating ?: 'N/A' }}</span>
                                <p class="card-text text-muted">{{ recipe.description }}</p>
                                
                                <div class="text-center">
                                    <a href="{{ path('app_recipe_show', {id: recipe.id}) }}" class="btn btn-sm custom-button w-50 mb-3">View his Recipe</a>
                                    <br>
                                    {% if app.user %}
                                        <a href="{{ path('app_recipe_rate', {id: recipe.id}) }}" class="btn btn-sm btn-warning w-50 mb-3">Rate This Recipe</a>
                                    {% else %}
                                        <p class="text-center text-muted small">Login to rate</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info text-center">No recipes found.</div>
        {% endif %}
    </div>
</section>
{% endblock %}
