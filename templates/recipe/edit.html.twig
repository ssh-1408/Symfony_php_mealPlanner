{% extends 'base.html.twig' %}

{% block title %}Edit Recipe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/recipe.css') }}">
{% endblock %}

{% block body %}
<section class="py-5 bg-light">
    <div class="container" style="max-width: 700px;">
        <div class="card shadow-sm border-0 p-4">
            <h2 class="mb-4 text-center text-primary">Edit Recipe</h2>

            {{ include('recipe/_form.html.twig', {'button_label': 'Update'}) }}

            <div class="d-flex justify-content-between align-items-center mt-4">
                <a href="{{ path('app_recipe_index') }}" class="btn btn-outline-secondary custom-button">
                    ‚Üê Back to Recipe List
                </a>

                {{ include('recipe/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
