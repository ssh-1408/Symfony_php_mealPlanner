                    <i class="fab fa-linkedin fa-2x"></i>
                </a>
            </div>
            <div class="mb-3">
                <a href="{{ path('app_home') }}" class="text-white me-3">Home</a>
                <a href="{{ path('app_about') }}" class="text-white me-3">About</a>
                <a href="{{ path('app_contact') }}" class="text-white">Contact</a>
            </div>
            <div>
                <small>¬© 2025 MealItUp. All rights reserved.</small>
            </div>
